<Page x:Class="TranslationMethod.Pages.Lab2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TranslationMethod.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Lab2Page">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Grid.Column="1" 
                   Text="Исходный текст" 
                   VerticalAlignment="Bottom" 
                   FontSize="20"/>
        <TextBox x:Name="tb_SourceText" 
                 Grid.Row="1" 
                 Grid.Column="1" 
                 TextWrapping="Wrap" 
                 FontSize="20"
                 AcceptsReturn="True" 
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto"/>

        <Button x:Name="btn_Start" 
                Content="Пуск" 
                Grid.Column="1" 
                Grid.Row="2" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                FontSize="20" Width="150" 
                Click="btn_Start_Click"/>

        <TextBlock Grid.Row="3" 
                   Grid.Column="1" 
                   Text="Итоговый текст" 
                   VerticalAlignment="Bottom" 
                   FontSize="20"/>
        <TextBox x:Name="tb_FinishText" 
                 Grid.Row="4" 
                 Grid.Column="1" 
                 TextWrapping="Wrap" 
                 FontSize="20"
                 AcceptsReturn="True" 
                 AcceptsTab="True"
                 VerticalScrollBarVisibility="Auto" 
                 HorizontalScrollBarVisibility="Auto"/>
        <TextBlock Grid.Row="5" 
                   Grid.Column="1"
                   FontSize="16"
                   Text="Форматы: Числа - (000)*001(100)*, Идентификаторы - начинаются с ab, затем a,b,c,d"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="0, 5"/>
    </Grid>
</Page>
